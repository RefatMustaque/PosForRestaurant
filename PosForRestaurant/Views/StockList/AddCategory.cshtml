@model PosForRestaurant.Models.ViewModel.ItemCategoryCreateVM
@using POS.Models.EntityModels
@{
	ViewBag.Title = "Add Category";
}
@using (Html.BeginForm())
{
	<div class="container" style="height:448px;overflow-y: scroll;">

		<br>
		@Html.AntiForgeryToken()
		<div class="form-group-lg">
			@Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
			<div class="row">
				<div class="col-md-3">
					@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>
				<div class="col-md-9">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>

			<br />
			<div class="row container" style="height:300px; overflow:auto; width:40%;">
				<table class="table table-hover table-bordered table-condensed">
					<thead>
						<tr>
							<th style="width:2%; text-align:center;">Del</th>
							<th style="width:3%; text-align:center;">ID</th>
							<th style="width:95%; text-align:center;">Category</th>
						</tr>
					</thead>
					<tbody>
						@{
							int Sl = 0;
						}

						@foreach (ItemCategory itemCategory in Model.ItemCategories)
						{
							<tr style="text-align:center;">


								<td>
									<button type="button" class="dlt" id="@itemCategory.Id">
										<i class="fa fa-close" style="font-size:15px;color:red; "></i>
									</button>
								</td>
								<td>@(++Sl)</td>
								<td>@itemCategory.Name</td>
							</tr>
						}

					</tbody>
				</table>
			</div>


		</div>
	</div>

}

@section scripts
    {
	<script src="~/Scripts/PosRestaurant/StockList/AddCategory.js"></script>
}
